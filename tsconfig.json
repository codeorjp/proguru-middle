{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./frontend/",
    "typeRoots": ["types", "node_modules/@types"],
    "esModuleInterop": true,
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "jsx": "react"
  },
  "exclude": [
    "**/*.spec.ts",
    "**/__tests__",
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}
